<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ic_back"
    android:gravity="center"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/logo"
        android:layout_marginStart="@dimen/_5sdp"
        tools:ignore="RtlCompat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الصفحة الرئيسية:"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:fontFamily="@font/swissra_condensed_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_80sdp"
        app:cardBackgroundColor="@color/purple_500"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_client"
                android:layout_alignParentLeft="true"
                android:id="@+id/captainLogo"/>

            <TextView
                android:layout_alignStart="@+id/captainLogo"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:text="ماشي أفراد"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat"
                android:textSize="@dimen/_15ssp"
                android:fontFamily="@font/swissra_condensed_bold"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mashyToroodCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_80sdp"
        app:cardBackgroundColor="@color/purple_500"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_torrod"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:fontFamily="@font/swissra_condensed_bold"
                android:text="ماشي طرود"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                tools:ignore="RtlCompat" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/myOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_80sdp"
        app:cardBackgroundColor="@color/purple_500"

        app:cardCornerRadius="@dimen/_10sdp">

        <TextView
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:text="طلباتي"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="RtlCompat"
            android:textSize="@dimen/_15ssp"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/swissra_condensed_bold"/>


    </androidx.cardview.widget.CardView>
</LinearLayout>