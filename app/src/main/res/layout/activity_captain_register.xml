<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".CaptainRegisterActivity"
    android:background="@drawable/ic_back">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/logo"
                android:layout_marginStart="@dimen/_5sdp"
                tools:ignore="RtlCompat"
                android:layout_marginTop="@dimen/_30sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تسجيل كابتن ماشي:"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:fontFamily="@font/swissra_condensed_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_40sdp"
                app:cardBackgroundColor="@color/purple_500"
                app:cardCornerRadius="@dimen/_10sdp"
                >

                <RelativeLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_name"
                        android:layout_alignParentLeft="true"
                        />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/captainName"
                        android:background="@android:color/transparent"
                        android:layout_centerInParent="true"
                        android:hint="الإسم"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:fontFamily="@font/swissra_condensed_bold"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_40sdp"
                app:cardBackgroundColor="@color/purple_500"
                app:cardCornerRadius="@dimen/_10sdp">

                <RelativeLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_phone"
                        android:layout_alignParentLeft="true"
                        />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/captainPhone"
                        android:background="@android:color/transparent"
                        android:layout_centerInParent="true"
                        android:hint="رقم الجوال"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:inputType="number"
                        android:fontFamily="@font/cairo_bold"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_40sdp"
                app:cardBackgroundColor="@color/purple_500"
                app:cardCornerRadius="@dimen/_10sdp">

                <RelativeLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_password"
                        android:layout_alignParentLeft="true"
                        />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/captainPassword"
                        android:background="@android:color/transparent"
                        android:layout_centerInParent="true"
                        android:hint="كلمة المرور"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:inputType="textPassword"
                        android:fontFamily="@font/swissra_condensed_bold"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_15sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ارفاق صورة الهوية"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/swissra_condensed_bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ارفاق صورة الرخصة"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/swissra_condensed_bold"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_7sdp"
                >

                <ImageButton
                    android:id="@+id/idImage"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_10sdp"
                    android:background="@color/purple_500"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_id_image"/>

                <ImageButton
                    android:id="@+id/imageLicense"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_10sdp"
                    android:background="@color/purple_500"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_license"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أوافق على الشروط و الأحكام"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/swissra_condensed_bold"
                android:layout_marginTop="@dimen/_10sdp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardBackgroundColor="@color/purple_500"
                app:cardCornerRadius="@dimen/_12sdp"
                >

                <Button
                    android:id="@+id/captainRegister"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تسجيل الدخول"
                    android:textColor="@color/black"
                    android:fontFamily="@font/swissra_condensed_bold"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/loginCaptain"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:fontFamily="@font/swissra_condensed_bold"
                android:gravity="center"
                android:text="هل لديك حساب بالفعل؟\n تسجيل الدخول"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>